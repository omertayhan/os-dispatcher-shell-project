package dispatcher;

import queue.Queue;

public class Queue {
	int len; // Kuyruðun boyutu
    int fore; // Dizinin öndeki imleci
    int back; // Dizinin arka imleci
    int dizi[]; // Elemanlarýn eklendiði dizi
    int elemanSayisi;
    Process
     
    public Queue(int N){
        this.len = N;
        this.dizi = new int[this.len];
        this.fore = -1;
        this.back = 0;
         
    }
     
    public void put(int nesne){ // Kuyruða ekleme
        if(!dolumu()){
            this.fore = (this.fore+1)%this.len;
            this.dizi[this.fore] = nesne;
            elemanSayisi++;
        }
        else{
            System.out.println("Kuyruk dolu");
        }
    }
     
    public int pop(){ // Kuyruktan çýkarma
        if(!bosmu()){
            int temp = this.dizi[this.back];
            this.back = (this.back+1)%this.len;
            elemanSayisi--;
            return temp;
             
        }else{
            System.out.println("Kuyruk boþ");
            return -1;
        }
    }
     
    public boolean bosmu(){
        if(elemanSayisi == 0){
            return true;
        }else{
            return false;
        }
    }
     
    public boolean dolumu(){
        if(elemanSayisi == this.len){
            return true;
        }else{
            return false;
        }
    }
 
    public static void main(String[] args) {
        Queue kuyruk = new Queue(3);
        kuyruk.put(5);
        kuyruk.put(4);
        kuyruk.put(5);
         
        // Bundan sonra eklenecek elemanlar için Kuyruk dolu diyecektir
        kuyruk.put(8);
         
         
    }
}
