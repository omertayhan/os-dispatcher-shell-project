package dispatcher;

public class Queue {
	int ilk; 
    int son; 
    int kapasite; 
    Process dizi[]; 
    int totalCount;
        
    public Queue(int N){
        this.ilk = 0;
        this.son=-1;
        this.dizi = new Process[1];
        this.son = -1;
        this.kapasite = 0;
         
    }
     
    public Process get(int index)
    {
    	return dizi[index];
    }
    public int getSize() {
    	return dizi.length;
    }
    public void put(Process nesne){ 
        if(!isFull()){
            this.fore = (this.fore+1)%this.len;
            this.dizi[this.fore] = nesne;
            totalCount++;
        }
        else{
            System.out.println("Kuyruk dolu");
        }
    }
    public void put(int index,Process nesne){ 
 
           dizi[index]=nesne;
    }
    
    public Process pop(){ 
        if(!isEmpty()){
        	Process temp = this.dizi[this.back];
            this.back = (this.back+1)%this.len;
            totalCount--;
            return temp;
             
        }else{
            System.out.println("Kuyruk boþ");
            return null;
        }
    }
     
    public boolean isEmpty(){
        if(totalCount == 0){
            return true;
        }else{
            return false;
        }
    }
     
    public boolean isFull(){
        if(totalCount == this.len){
            return true;
        }else{
            return false;
        }
    }
   
}
